{
  "name": "vms-controller-fe",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup-env": "node scripts/setup-env.js",
    "setup-env:once": "node scripts/setup-env.js --no-watch",
    "setup-env:prod": "node scripts/setup-env.js --production --no-watch",
    "dev": "node scripts/setup-env.js",
    "start": "node scripts/dev-with-env-watch.js",
    "build": "vite build",
    "predeploy": "where pm2 >nul 2>nul || npm install -g pm2 && where serve >nul 2>nul || npm install -g serve",
    "deploy": "npm run predeploy && npm run build && (pm2 delete vms-controller-fe || echo Skipping delete) && pm2 start cmd --name vms-controller-fe -- /c \"npx serve -s dist -l 3000\" && pm2 save",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "docker:build": "docker compose build",
    "docker:up": "node scripts/docker-up.js",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v --rmi all",
    "deploy:prod": "npm run docker:build && npm run docker:up",
    "deploy:dev": "npm run docker:build && npm run docker:up"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "@tailwindcss/vite": "^4.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tw-animate-css": "^1.3.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
